{
  "info": {
    "name": "SIH Assessment API",
    "description": "Complete collection for testing Mental Health Assessment endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Assessments",
      "item": [
        {
          "name": "Get Available Assessments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/student/assessments/available",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments", "available"]
            }
          },
          "response": []
        },
        {
          "name": "Submit PHQ-9 Assessment (Moderate)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"formType\": \"PHQ-9\",\n  \"responses\": {\n    \"q1\": 2,\n    \"q2\": 1,\n    \"q3\": 3,\n    \"q4\": 2,\n    \"q5\": 1,\n    \"q6\": 2,\n    \"q7\": 1,\n    \"q8\": 2,\n    \"q9\": 0\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/student/assessments",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments"]
            }
          },
          "response": []
        },
        {
          "name": "Submit GAD-7 Assessment (Mild)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"formType\": \"GAD-7\",\n  \"responses\": {\n    \"q1\": 1,\n    \"q2\": 1,\n    \"q3\": 2,\n    \"q4\": 1,\n    \"q5\": 1,\n    \"q6\": 1,\n    \"q7\": 0\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/student/assessments",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments"]
            }
          },
          "response": []
        },
        {
          "name": "Submit PSS-10 Assessment (Stress)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"formType\": \"PSS-10\",\n  \"responses\": {\n    \"q1\": 1,\n    \"q2\": 1,\n    \"q3\": 1,\n    \"q4\": 2,\n    \"q5\": 3,\n    \"q6\": 1,\n    \"q7\": 2,\n    \"q8\": 3,\n    \"q9\": 1,\n    \"q10\": 1\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/student/assessments",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments"]
            }
          },
          "response": []
        },
        {
          "name": "Get Assessment History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/student/assessments",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments"]
            }
          },
          "response": []
        },
        {
          "name": "Get Assessment History (Filtered by Type)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/student/assessments?formType=PHQ-9",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments"],
              "query": [
                {
                  "key": "formType",
                  "value": "PHQ-9"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Assessment History (Paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/student/assessments?limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Assessment by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/student/assessments/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{assessment_id}}",
                  "description": "Assessment UUID"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Assessment Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/student/assessments/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "assessments", "stats"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },

    {
      "key": "assessment_id",
      "value": "",
      "type": "string",
      "description": "UUID of assessment - get from assessment history response"
    }
  ]
}
