          },
          "response": []
        },
        {
          "name": "Update Student Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"phone\": \"9876543210\",\n  \"bio\": \"Computer Science student passionate about mental wellness\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/student/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "student", "profile"]
            },
            "description": "Update student profile. Cannot update email, role, or college_id. Optional fields: name, phone, bio, avatar"
          },
          "response": []
        }
      ],
      "description": "Student profile management endpoints"
